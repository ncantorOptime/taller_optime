{% extends 'base.html.twig' %}
{% block name %}
    <h1>Creación Productos</h1>
{% endblock %}

{% block body %}
    {{ form_start(form) }}
        <div class="form-group">
            <label for="product_codigo" class="col-sm-2 control-label">Codigo Producto:</label>
            <div class="col-sm-4">
                {{ form_widget(form.codigo) }}
            </div>
            <label for="product_codigo" class="col-sm-2 control-label">Nombre Producto:</label>
            <div class="col-sm-4">
                {{ form_widget(form.nombre) }}
            </div>
        </div>
        <div class="form-group">
            <label for="product_codigo" class="col-sm-2 control-label">Descripción Producto:</label>
            <div class="col-sm-10">
                {{ form_widget(form.descripcion) }}
            </div>
        </div>
        <div class="form-group">
            <label for="product_codigo" class="col-sm-2 control-label">Marca:</label>
            <div class="col-sm-2">
                {{ form_widget(form.marca) }}
            </div>
            <label for="product_codigo" class="col-sm-2 control-label">Categoria:</label>
            <div class="col-sm-6">
                {{ form_widget(form.categoria) }}
            </div>
        </div>
        <div class="form-group">
            <label for="product_codigo" class="col-sm-2 control-label">Precio:</label>
            <div class="col-sm-4">
                {{ form_widget(form.precio) }}
            </div>
        </div>

        <div class="btn-group button_group" role="group" aria-label="...">
            <input type="submit" value="Create" class="btn btn-success"/>
            <a href="{{ path('product_index') }}" class="btn btn-primary">Volver</a>
        </div>
    {{ form_end(form) }}

{% endblock %}
